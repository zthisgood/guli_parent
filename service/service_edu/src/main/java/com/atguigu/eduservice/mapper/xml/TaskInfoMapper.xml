<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.eduservice.mapper.TaskInfoMapper">

    <sql id="baseCondition">
        <where>
            <if test="classId != null and classId != ''">
                a.class_id =#{classId}
            </if>
            <if test="userId != null and userId != ''">
                d.user_id =#{userId}
            </if>
        </where>
    </sql>

    <select id="queryPage" resultType="com.atguigu.eduservice.entity.vo.TaskPageVO" parameterType="com.atguigu.eduservice.entity.query.TaskQuery">
        SELECT a.task_id paperId, a.task_name paperName, a.difficulty ,a.task_date paperDate ,a.exam_date examDate
        , a.task_score paperScore ,a.teach_name teachName ,a.create_time createTime,d.status ,d.fraction,d.user_id
        FROM task_info a
            LEFT JOIN task_user d ON a.task_id = d.task_id
        <include refid="baseCondition"></include>
        order by a.create_time desc
    </select>


    <select id="queryTaskList" resultMap="BaseResultMap">
         SELECT * from task_info
    </select>

    <resultMap id="BaseResultMap" type="com.atguigu.eduservice.entity.TaskInfo">
        <id column="task_id" property="taskId" />
        <result column="task_name" property="taskName" />
        <result column="difficulty" property="difficulty" />
        <result column="sub_type" property="subType" />
        <result column="task_date" property="taskDate" />
        <result column="exam_date" property="examDate" />
        <result column="question_num" property="questionNum" />
        <result column="teach_name" property="teachName" />
        <result column="teach_id" property="teachId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="task_score" property="taskScore" />
    </resultMap>

</mapper>
